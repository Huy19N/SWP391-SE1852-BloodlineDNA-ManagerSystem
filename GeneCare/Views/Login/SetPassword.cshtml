@model Users;
@{
	ViewData["Title"] = "Set Password";
	var errorConfirmPassword = ViewData.ModelState["confirmPassword"];
}

<form asp-action="SetPassword" asp-controller="Login" method="post">
	<div class="mb-3">
		<label class="form-label">Email address: @Model.Email</label>
	</div>
	<div class="mb-3">
		<label class="form-label">Password</label>
		<input asp-for="Password" type="password" class="form-control" required>
	</div>
	<div class="mb-3">
		<label class="form-label">Confirm Password</label>
		<input name="confirmPassword" class="form-control" required>
		@if (errorConfirmPassword?.Errors.Count > 0)
		{
			<span class="text-danger">@errorConfirmPassword.Errors[0].ErrorMessage</span>
		}
		
	</div>
	<button type="submit" class="btn btn-primary">Set Password</button>
</form>